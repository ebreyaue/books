<!DOCTYPE html>
<html lang="en">

<head>

    <%- include('./partials/header') %>
    <title>Book Register | Home</title>
</head>

<body>
<%- include ('./partials/navigation') %>

<main>
<div class="album py-5 bg-light">
    <div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

        
            <% books.forEach(function(books){ %>
            <div class="col">
            <div class="card shadow-sm">
            <img class="bd-placeholder-img card-img-top" width="100%" height="100%" src=" <%= books.image %> ">

            <div class="card-body">
            <h2 class="mt-5"><%=books.title %></h2>
              <p class="card-text"><%=books.description %></p>
              <div class="d-flex justify-content-between align-items-center">
               
                <div class="btn-group">
                <!-- class="btn btn-danger btn-clock">-->
                <a href="/delete/<%=books.id %>" class="btn btn-sm btn-outline-secondary">Delete</a>

                </div>
              </div>
            </div>
            </div>
          </div>
        
   
    <%})%>
</div>
    </main>










</body>
</html>